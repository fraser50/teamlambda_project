<!DOCTYPE html>
<!-- this is the upload page
authors: Fraser (based on index page) -->
<html>
    <head>
        <link rel="stylesheet" href="style.css">
        <!-- meta tag used to help css respond to mobile screens better  -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Upload</title>
    </head>

    <body>
      <!--this page will have:
       a navigation bar at the top
       2 columns, left is preview and caption field, right is group selection, license selection and upload
       Footer will be copyright, etc
      -->
      <%- include('includes/nav.ejs'); %>
      <main>
        <%- include('includes/alert.ejs'); %>
        <h1 style="color: red;">WARNING: Make sure no image you upload contains location data!</h1><br>
        <form action="/upload" method="post" enctype="multipart/form-data">
          <div class="row">
            <div class="column">
                 <img src="placeholder.png" style="width:250px; height:250px;"><br>
                 Caption<br>
                 <input type="text" name="caption" class="inputfield">
            </div>
            <div class="column">
                 License<br>
                 <select name="license">
                   <option>Please specify</option>
                   <option>A</option>
                   <option>B</option>
                   <option>C</option>
                </select><br>
                Group<br>
                <select name="selectedgroup">
                  <option value="none">No group</option>
                  <% groups.forEach(function(g) { %>
                    <option value="<%= g.groupID %>"><%= g.groupName %></option>
                  <% }); %>
                </select><br><br>
                <input type="file" name="imgfile"><br>
                <input type="submit" value="Upload" class="inputbutton">
            </div>
         </div>
        </form>
    </main>
      <div class="contact">
        <p> Contact info and legal stuff here! </p>
      </div>

    </body>


</html>
