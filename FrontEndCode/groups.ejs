<html>
    <!-- This page contains all registered groups (that are public) -->

    <head>
        <link rel="stylesheet" href="style.css">
        <!-- meta tag used to help css respond to mobile screens better  -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Groups</title>
    </head>
    <%- include('includes/nav.ejs'); %>
    <body>
        <main>
            <center>
            <% groups.forEach(function(g) { %>
                <div class="group">
                    <a href="/group/<%= g.groupID %>" style="color: black; text-decoration: none;">
                    <div class="group_column">
                        <h2><%= g.groupName %></h2>
                        <br>
                        <figure class="group_thumb">
                            <img src="/placeholder.png" style="width:50%;height:50%;" class="group_image"><br>
                            <figcaption class="group_description"
                                <p><%= g.groupDesc %></p></figcaption>
                        </figure></div></a>
                        </div>
                </div><br>
            <% }); %>
            </center>
        </main>
    </body>
</html>
