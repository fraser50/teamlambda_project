<html>
    <!-- This page contains all of a groups uploads (that are public) -->

    <head>
        <link rel="stylesheet" href="/style.css">
        <!-- meta tag used to help css respond to mobile screens better  -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Group</title>
    </head>
    <%- include('includes/nav.ejs'); %>
    <main>
        <% group.forEach(function(u) { %>
            <div class="upload">
                <div class="upload_column">
                    
                    <figure class="upload_thumb">
                        <img src="/upload/<%= u.fName %>" style="width:50%;height:50%;" class="group_image"><br>
                        <figcaption class="upload caption\"
                            <p><%= u.caption %></p></figcaption>
                    </figure>
                    </div>
            </div><br>
        <% }); %>
    </main>
</html>
