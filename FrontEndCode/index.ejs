<html>
    <head>
        <link rel="stylesheet" href="style.css">
        <!-- meta tag used to help css respond to mobile screens better  -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Home Page</title>
    </head>

    <body>
      <!--this page will have:
       a navigation bar at the top
       2 columns, 1 for a slidshow of most popular content (for that week based on views) the other will be of the most recent uploads
       and a section at the bottom to show the teams contact information and any legal stuff
      -->
      <%- include('includes/nav.ejs'); %>
      <div class="row">
         <div class="column">
            <h3>Most popular content</h3>
              <p> this is where the most popular content goes it is currently empty</p>
         </div>
         <div class="column">
            <h3>Most recent content</h3>
            <main>
                <center>
                <% if (group.length == 0) { %>
                    <br><h1>This group is currently empty!</h1><br>
                <% } %>
                <% group.forEach(function(u) { %>
                    <a href="/image/<%= u.uploadID %>" style="color: black; text-decoration: none;">
                    <div class="upload">
                        <div class="upload_column">

                            <figure class="upload_thumb">
                                <img src="/uploads/<%= u.fName %>" style="width:50%;height:50%;" class="group_image"><br>
                                <figcaption class="upload_caption"
                                    <p><%= u.caption %></p></figcaption>
                            </figure>
                            </div></a>
                    </div><br>
                <% }); %>
                </center>
            </main>
         </div>
      </div>
      <div class="contact">
         <p> Contact info and legal stuff here! </p>
      </div>

    </body>


</html>
